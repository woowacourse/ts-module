{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "declaration": true,
    "declarationDir": "@types",
    "outDir": "@types"
  },
  "include": ["src"]
}
