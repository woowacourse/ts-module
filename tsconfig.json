{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
