{
  "compilerOptions": {
    "module": "es2015",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/*.test.ts", "src/*.test-d.ts"]
}
