{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "declaration": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
